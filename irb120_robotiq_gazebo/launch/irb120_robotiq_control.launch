<launch>

  <!-- load the joint state controller -->
  <rosparam file="$(find irb120_robotiq_gazebo)/config/joint_state_controller.yaml" command="load" />
  <node name="joint_state_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn joint_state_controller" />

  <!-- load the arm controller -->
  <rosparam file="$(find irb120_robotiq_gazebo)/config/irb120_arm_controller.yaml" command="load" />
  <node name="irb120_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" />

  <!-- load the grippper controller -->
  <rosparam file="$(find irb120_robotiq_gazebo)/config/robotiq_gripper_controller.yaml" command="load"/>
  <node name="robotiq_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn gripper_controller"/>
   
</launch>
